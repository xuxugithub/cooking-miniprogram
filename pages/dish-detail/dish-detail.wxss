/* pages/dish-detail/dish-detail.wxss */
.container {
  padding-bottom: 120rpx;
}

/* 菜品图片区域 */
.dish-image-section {
  position: relative;
  height: 500rpx;
}

.dish-image {
  width: 100%;
  height: 100%;
}

/* 收藏按钮浮动在图片上 */
.favorite-btn {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  z-index: 10;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.favorite-btn:active {
  transform: scale(0.85);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.heart-icon {
  font-size: 40rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

.heart-icon.favorited {
  animation: heartBeat 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  transform: scale(1.1);
}

@keyframes heartBeat {
  0% { 
    transform: scale(1); 
    filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
  }
  25% { 
    transform: scale(1.3); 
    filter: drop-shadow(0 4rpx 8rpx rgba(255, 107, 53, 0.3));
  }
  50% { 
    transform: scale(1.1); 
    filter: drop-shadow(0 3rpx 6rpx rgba(255, 107, 53, 0.2));
  }
  75% { 
    transform: scale(1.2); 
    filter: drop-shadow(0 4rpx 8rpx rgba(255, 107, 53, 0.3));
  }
  100% { 
    transform: scale(1.1); 
    filter: drop-shadow(0 2rpx 4rpx rgba(255, 107, 53, 0.1));
  }
}

.image-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  padding: 60rpx 30rpx 30rpx;
  color: #fff;
}

.dish-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.dish-meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  opacity: 0.9;
}

/* 菜品信息 */
.dish-info-section {
  padding: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.stats-row {
  display: flex;
  justify-content: center;
  gap: 60rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.stat-icon {
  font-size: 28rpx;
}

.stat-text {
  color: #ff6b35;
  font-weight: 500;
}

/* 描述区域 */
.description-section {
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.description-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
}

/* 食材清单 */
.ingredients-section {
  padding: 30rpx;
}

.ingredients-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.ingredient-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.ingredient-item:last-child {
  border-bottom: none;
}

.ingredient-name {
  font-size: 28rpx;
  color: #333;
}

.ingredient-amount {
  font-size: 26rpx;
  color: #ff6b35;
  font-weight: 600;
}

/* 制作步骤预览 */
.steps-preview-section {
  padding: 30rpx;
}

.steps-preview-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.step-preview-item {
  display: flex;
  gap: 20rpx;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  background: #ff6b35;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  margin-bottom: 15rpx;
}

.step-description {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.step-meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
  z-index: 100;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border: none;
}

.action-btn.favorite-action {
  background: #fff;
  color: #666;
  border: 2rpx solid #e0e0e0;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-btn.favorite-action.favorited {
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  color: #fff;
  border: 2rpx solid #ff6b35;
  transform: scale(1.02);
}

.action-btn.favorite-action .heart-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  color: #fff;
}

.action-btn.secondary {
  background: #fff;
  color: #ff6b35;
  border: 2rpx solid #ff6b35;
}

.action-btn[disabled] {
  opacity: 0.5;
}

.btn-text {
  font-size: 28rpx;
}

/* 制作步骤弹窗 */
.steps-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.steps-modal-content {
  background: #fff;
  border-radius: 20rpx;
  width: 90%;
  max-height: 80%;
  display: flex;
  flex-direction: column;
}

.steps-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.steps-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.steps-progress {
  font-size: 24rpx;
  color: #ff6b35;
}

.close-btn {
  font-size: 32rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.current-step {
  flex: 1;
  padding: 30rpx;
  overflow-y: auto;
}

.step-number-large {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff6b35;
  text-align: center;
  margin-bottom: 30rpx;
}

.step-image-large {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.step-description-large {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.step-meta-large {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  font-size: 26rpx;
  color: #999;
}

.steps-navigation {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.nav-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  border: 2rpx solid #ff6b35;
  background: #fff;
  color: #ff6b35;
}

.nav-btn.primary {
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  color: #fff;
  border: none;
}

.nav-btn[disabled] {
  opacity: 0.3;
}

/* 加载和空状态 */
.loading,
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
}