/* pages/category/category.wxss */
.container {
  padding: 0;
  padding-bottom: 160rpx; /* 为底部导航栏留出空间 */
  background: #f5f5f5;
  min-height: 100vh;
}

/* 分类列表 */
.categories-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.category-item {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 25rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-item:active {
  transform: translateY(-6rpx);
  box-shadow: 0 10rpx 35rpx rgba(255, 107, 53, 0.15);
}

.category-image {
  width: 100%;
  height: 220rpx;
}

.category-info {
  padding: 25rpx 20rpx;
  text-align: center;
}

.category-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
  line-height: 1.3;
}

.category-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}

/* 菜品列表 */
.back-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 20rpx;
  margin: 20rpx 20rpx 30rpx;
  background: #fff;
  border-radius: 25rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.back-btn {
  font-size: 30rpx;
  color: #ff6b35;
  font-weight: 500;
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  background: rgba(255, 107, 53, 0.1);
  transition: all 0.3s ease;
}

.back-btn:active {
  background: rgba(255, 107, 53, 0.2);
}

.current-category {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.dishes-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
}

.dish-item {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 25rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.dish-item:active {
  transform: translateY(-6rpx);
  box-shadow: 0 10rpx 35rpx rgba(255, 107, 53, 0.15);
}

.dish-image {
  width: 100%;
  height: 220rpx;
}

.dish-info {
  padding: 20rpx;
}

.dish-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.3;
}

.dish-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  align-items: center;
  gap: 8rpx;
}

.dish-difficulty {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background: rgba(255, 107, 53, 0.1);
  font-weight: 500;
  flex-shrink: 0;
  color: #ff6b35;
}

.dish-time {
  font-size: 22rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.dish-stats {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  color: #ff6b35;
  gap: 8rpx;
}

.dish-views,
.dish-collects {
  background: rgba(255, 107, 53, 0.1);
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  font-weight: 500;
  flex: 1;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 加载状态 */
.load-more,
.no-more {
  text-align: center;
  padding: 50rpx 0;
  color: #999;
  font-size: 28rpx;
  background: #fff;
  margin: 30rpx 20rpx;
  border-radius: 25rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.loading,
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 140rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 30rpx;
}

/* 底部导航栏 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  display: flex;
  padding: 20rpx 0 30rpx;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -6rpx 30rpx rgba(0, 0, 0, 0.1);
  z-index: 1000;
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx;
  transition: all 0.3s ease;
  position: relative;
}

.nav-item.active {
  color: #ff6b35;
}

.nav-item.active::before {
  content: '';
  position: absolute;
  top: -3rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 50rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  border-radius: 3rpx;
}

.nav-item.active .nav-icon {
  transform: scale(1.1);
}

.nav-icon {
  font-size: 44rpx;
  margin-bottom: 10rpx;
  transition: all 0.3s ease;
}

.nav-text {
  font-size: 22rpx;
  color: #666;
  font-weight: 500;
}

.nav-item.active .nav-text {
  color: #ff6b35;
  font-weight: 600;
}